{
    "name": "SayNoToImpulse",
    "version": "0.0.5",
    "description": "Say NO to the Impulse of Open a Website",
    "icons": {
		"48": "icons/icon.png"
	},

    "background": {
        "scripts": ["/scripts/background.js"],
        "persistent": false
    },

    "browser_action": {
        "default_popup": "/static/popup.html",
        "default_title": "SayNoToImpulse"
    },

    "web_accessible_resources": ["/static/no.html"],

    "author": "Inbydev",
    "permissions": [
        "<all_urls>",
        "storage",
        "webRequest",
        "webRequestBlocking"
    ],

    "browser_specific_settings": {
		"gecko": {
			"id": "saynotoimpulse@inby.dev",
			"strict_min_version": "100.0",
			"data_collection_permissions": {
			    "required": ["none"],
                "collects_browsing_data": false
            }
		}
	},

    "default_locale": "en",
    "manifest_version": 2
}
